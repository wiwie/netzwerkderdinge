<h2><%= I18n.t("devise.sessions.new.log_in") %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label I18n.t("devise.sessions.new.email") %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label I18n.t("devise.sessions.new.password") %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label I18n.t("devise.sessions.new.remember_me") %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit I18n.t("devise.sessions.new.log_in") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
